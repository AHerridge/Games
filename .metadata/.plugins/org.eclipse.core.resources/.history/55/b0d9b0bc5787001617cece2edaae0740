package jrAlex.core;

import java.awt.Color;
import java.awt.Graphics2D;

import org.dyn4j.dynamics.World;
import org.dyn4j.samples.SimulationBody;
import org.dyn4j.samples.SimulationFrame;

public class Game extends SimulationFrame
{
	private static final long serialVersionUID = 1L;

	public Game()
	{
		super("Sokoban", 100);
	}

	@Override
	protected void initializeWorld()
	{
		this.world.setGravity(World.ZERO_GRAVITY);
		repaint();
	}
	
	@Override
	protected void render(Graphics2D g, double elapsedTime, SimulationBody body)
	{
		super.render(g, elapsedTime, body);
		g.setColor(Color.BLACK);
		g.drawLine(100, 100, 200, 100);
	}
}
